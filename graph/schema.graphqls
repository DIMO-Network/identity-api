# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time
scalar Address

type Vehicles {
  totalCount: Int
  edges: [VehicleEdge]
  pageInfo: PageInfo
}

type PageInfo {
  endCursor: String!
  hasNextPage: Boolean
}

type Vehicle {
  id: Int!
  owner: Address!
  make: String!
  model: String!
  year: Int!
  mintTime: Time!
}

type VehicleEdge {
  node: Vehicle
  cursor: String
}

type Query {
  ownedVehicles(address: Address!, first: Int, after: String): Vehicles!
}
